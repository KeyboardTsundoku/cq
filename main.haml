!!!
%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
  %head
    %title="Comfortably Quiet"
    %meta(name="description" content="{MetaDescription}")
    %link(rel="shortcut icon" href="{Favicon}")
    %link(rel="alternate" type="application/rss+xml" title="RSS" href="{RSS}")
    %meta(name="viewport" content="width=850")
    
    / bootstrap css
    %link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")

    / css from dropbox
    %link(rel="stylesheet" type="text/css" href="https://dl.dropbox.com/s/c1bg4raacv6wwys/cq.css")
    
    / jQuery (necessary for Bootstrap's Javascript plugins)
    %script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js")
  %body
  
    / Latest compiled and minified JavaScript
    %script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous")
    / Pinterest widget
    %script(async defer src="//assets.pinterest.com/js/pinit.js")
    / js from dropbox
    %script(src="https://dl.dropbox.com/s/cp8xhnskci4bfmp/cq.js")

    .container-fluid
      / menu
      <img class="img-rounded center-block" id="avatar" src={PortraitURL-128} alt="Comfortably Quiet" data-pin-nopin="true">
      .col-md-3
        #menu.list-group
          
      / modal
      #focus.modal.fade(tabindex="-1" role="dialog" aria-labelledby="label")
        .modal-dialog(role="document")
          .modal-content
            .modal-header
              %button.close(type="button" data-dismiss="modal" aria-label="Close")
                %span(aria-hidden="true")
                  &times;
              %h4.modal-title
            .modal-body

      / content
      #content.col-md-9
        / header
        %a#title.text-center(href="/")
          %h1 {Title}
        
        / nav bar
        %nav.navbar.navbar-default#nav-bar
          %ul.nav.nav-pills.center-block
            {block:HasPages}{block:Pages}<li role="presentation"><a href="{URL}">{Label}</a></li>{/block:Pages}{/block:HasPages}
            {block:AskEnabled}<li role="presentation"><a href="/ask">{AskLabel}</a></li>{/block:AskEnabled}

        {block:Posts}
        #post
          / text
          {block:Text}
          .media
            .media-body
              {block:Title} <h3 class="media-heading">{Title}</h3> {/block:Title}
              {Body}
              {block:PermalinkPage}
              {block:HasTags}{block:Tags}%a(href="{TagURL}") {Tag}{/block:Tags}{/block:HasTags}{/block:PermalinkPage}
            .media-right
              .glyphicon.glyphicon-align-left.media-object(aria-hidden="true")
          {/block:Text}
          
          / video
          {block:Video}
          .media
            .media-body
              {block:Title} <h3 class="media-heading">{Title}</h3> {/block:Title}
              .center-block {Video-500}
              {block:PermalinkPage}
              {block:Caption}<br/>{Caption}{/block:Caption}
              {block:HasTags}{block:Tags}%a(href="{TagURL}") {Tag}{/block:Tags}{/block:HasTags}{/block:PermalinkPage}
            .media-right
              .glyphicon.glyphicon-facetime-video.media-object(aria-hidden="true")
          {/block:Video}

          / audio
          {block:Audio}
          .media
            .media-body
              {block:Title} <h3 class="media-heading">{Title}</h3> {/block:Title}
              {block:AudioEmbed}{AudioEmbed-500}{/block:AudioEmbed}
              .center-block {block:AudioPlayer}
              {/block:AudioPlayer}
              {block:PermalinkPage}
              {block:Caption}<br/>{Caption}{/block:Caption}
              {block:HasTags}{block:Tags}%a(href="{TagURL}") {Tag}{/block:Tags}{/block:HasTags}{/block:PermalinkPage}
            .media-right
              .glyphicon.glyphicon-headphones.media-object(aria-hidden="true")
          {/block:Audio}

          / quote
          {block:Quote}
          .media
            .media-body
              {block:Title} <h3 class="media-heading">{Title}</h3> {/block:Title}
              {Quote}
              {block:Source}&mdash; {Source}{/block:Source}
              {block:PermalinkPage}
              {block:HasTags}{block:Tags}%a(href="{TagURL}") {Tag}{/block:Tags}{/block:HasTags}{/block:PermalinkPage}
            .media-right
              .glyphicon.glyphicon-comment.media-object(aria-hidden="true")
          {/block:Quote}

          / link
          {block:Link}
          .media
            .media-body
              {block:Title}  <h3 class="media-heading">{Title}</h3> {/block:Title}
              %a(href="{URL}") {Name}
              {block:PermalinkPage}
              {block:Description}{Description}{/block:Description} 
              {block:HasTags}{block:Tags}%a(href="{TagURL}") {Tag}{/block:Tags}{/block:HasTags}{/block:PermalinkPage}
            .media-right
              .glyphicon.glyphicon-align-left.media-object(aria-hidden="true")
          {/block:Link}
        {/block:Posts}
        {block:Pagination}
        #pageNav
          {block:NextPage} <a href="{NextPage}">&larr; <span>{lang:Older}</span></a>{/block:NextPage}
          {block:PreviousPage} <a href="{PreviousPage}"><span>{lang:Newer}</span> &rarr;</a>{/block:PreviousPage}
        {/block:Pagination}
